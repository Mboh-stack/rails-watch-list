<div class="container mt-4">
  <h1 class="mb-4">Ajouter un Bookmark à <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark], html: { class: "card p-4 shadow" } do |form| %>
    <div class="mb-3">
      <%= form.association :movie, collection: Movie.all, label: "Film", input_html: { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.input :comment, as: :text, label: "Commentaire", input_html: { class: "form-control", rows: 3 } %>
    </div>

    <div class="d-grid">
      <%= form.submit "Ajouter le Bookmark", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Retour à la liste", list_path(@list), class: "btn btn-secondary" %>
  </div>
</div>
