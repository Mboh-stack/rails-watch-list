<h1>Créer une Nouvelle Liste</h1>

<%= form_with model: @list, local: true do |form| %>
  <div>
    <%= form.label :name, "Nom de la Liste" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit "Créer la liste" %>
  </div>
<% end %>

<%= link_to "Retour à toutes les listes", lists_path %>
